<h2>Hi,
  {{session.user.name}}! Do you know a cool working spot? Add it here!</h2>

<form
  action="/spots/create"
  method="post"
  enctype="multipart/form-data"
  class="form-card-create"
>
  <h3>Post a new spot</h3>

  <div class="form-content">
    <div class="input-field">
      <input type="text" name="title" placeholder="Name of spot" required />
    </div>
    <div class="input-field">
      <input type="text" name="openingHours" placeholder="Opening hours" />
    </div>

    <div class="select-field">
      <p>Price class</p>
      <select name="averagePrice" class="select-field-content">
        <option value="€">€</option>
        <option value="€€">€€</option>
        <option value="€€€">€€€</option>
      </select>
    </div>
    <div class="select-field">
      <p> Created by:</p>
      <select name="author" class="select-field-content">
        <option value="{{session.user.name._id}}">{{session.user.name}}</option>
      </select>
    </div>

    <div class="select-field">
     <p>Details</p>
    {{#each details}}
    <div>
      <input type="checkbox" id={{this}} name="details" value={{this}}>
      <label for={{this}}>{{this}}</label>
    </div>
    {{/each}}

    <div class="input-field">
      <p>Short description</p>
      <textarea
        type="text"
        name="description"
        cols="30"
        rows="4"
        placeholder="Nice and friendly place ..."
      ></textarea>
    </div>
    <div class="input-field">
      <p>Upload an image</p>
      <input type="file" name="spotPicture" placeholder="upload picture" />
    </div>

    <button type="submit" class="btn-green-main">Add new spot</button>

  </div>
</form>