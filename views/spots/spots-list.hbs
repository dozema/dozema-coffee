<div>

  {{#each spots}}
    <section>
      {{#if imageUrl}}
        <img src="{{imageUrl}}" alt="{{this.title}}" class="img-spot"/>
      {{else}}
        <img
          src="https://img.freepik.com/free-vector/cute-pug-dog-drink-coffee-cup-cartoon-animal-logo-coffee-illustration_295036-956.jpg"
          alt="no image"
          class="img-spot"
        />
      {{/if}}
      <h1>{{this.title}}</h1>
      {{#each this.details}}
      {{#if this}}
      <li>{{@key}}</li>
      {{/if}}
      {{/each}}
      <p>{{this.rating}}</p>
      <a href="/spots/{{this._id}}/spot-details">More details</a>
    </section>

  {{/each}}

</div>