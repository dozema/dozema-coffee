<h1>Spot-details</h1>

<section>
  <img src="{{this.imageUrl}}" alt="{{this.title}}" />

  <h1>{{this.title}}</h1>
  <p>Details: {{this.details}}</p>
  {{#if session.user}}
    <p>Description: {{this.description}}</p>
    <p>Created by: {{this.creator.name}}</p>
    <p>Rating: {{this.rating}}</p>
  {{/if}}
  <p>Address: {{this.address}}</p>
  <p>Average Price: {{this.averagePrice}}</p>
  <p>Opening Hours: {{this.openingHours}}</p>
  <br />

  <a href="/spots/{{this._id}}/favorite">Like</a>
  <a href="/spots/{{this._id}}/edit">Edit</a>
  <a href="/spots/{{this._id}}/delete">Delete</a>

</section>

