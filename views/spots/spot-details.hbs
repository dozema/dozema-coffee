<h1>Spot-details</h1>

<section>
  {{#if imageUrl}}
    <img src="{{imageUrl}}" alt="{{this.title}}" />
  {{else}}
    <img
      src="https://img.freepik.com/free-vector/cute-pug-dog-drink-coffee-cup-cartoon-animal-logo-coffee-illustration_295036-956.jpg"
      alt="no image"
    />
  {{/if}}

  <h1>{{this.title}}</h1>
  <p>Details: {{this.details}}</p>
  {{#if session.user}}
    <p>Description: {{this.description}}</p>
    <p>Created by: {{this.creator.name}}</p>
    <p>Rating: {{this.rating}}</p>
  {{/if}}
  <p>Address: {{this.address}}</p>
  <p>Average Price: {{this.averagePrice}}</p>
  <p>Opening Hours: {{this.openingHours}}</p>
  <br />

  <a href="/spots/{{this._id}}/favorite">Like</a>
  <a href="/spots/{{this._id}}/edit">Edit</a>
  <a href="/spots/{{this._id}}/delete">Delete</a>

</section>

