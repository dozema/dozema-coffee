<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>{{title}}</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/forms.css" />

  </head>

  <body>
    <div class="navibar">
      <div class="navbar-wrapper">

        <div class="navbar-left">
          <img src="/images/logo-dozema.png" alt="" height="30px" />
          <a href="/" class="navbar-link">dozema</a>
          <a href="/spots" class="navbar-link">Spots</a>
          <a href="/spots/create" class="navbar-link">Add spot</a>
        </div>

        <div class="navbar-right">
          {{#if session.user}}
            <a href="/users/profile" class="button-primary">Profile</a>
            <form action="/logout" method="POST">
              <button class="btn-secondary">Logout</button>
            </form>
          {{else}}
            <a href="/signup" class="button-secondary">Register</a>
            <a href="/login" class="button-primary">Login</a>
          {{/if}}
        </div>
      </div>
    </div>

    {{{body}}}

    <div class="footer">
      <p><br>© 2022 by dozema ☕ </p>
    </div>

  </body>

  <script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBESkPQYieOnIYDgeryIpZALxce_BORe04"
  ></script>
  <script src="/js/script.js"></script>

