<header class="header-content">
  <h1>Looking for a nice spot to work?</h1>
</header>

<div class="main-content">
  <div class="spots-listing">
    <section>
      <h3>Find your favorite spot</h3>
      <div class="col-container">
        <div class="row">

          {{#each spots}}
            <div class="col-3">
              <div class="card h-100" style="width: 15rem;">

                {{#if imageUrl}}
                  <img
                    src="{{imageUrl}}"
                    class="card-img-top"
                    style="width: 3rem;"
                    alt="{{this.title}}"
                  />
                {{else}}
                  <img
                    src="https://img.freepik.com/free-vector/cute-pug-dog-drink-coffee-cup-cartoon-animal-logo-coffee-illustration_295036-956.jpg"
                    alt="no image"
                  />
                {{/if}}

                <div class="card-body" >
                  <h5 class="card-title">{{this.title}}</h5>
                  <p class="card-text" style="height: 3rem;">{{this.description}}</p>
                  <ul class="list-group list-group-flush" style="height: 3rem;">
                     {{#each this.details}}
                    <li class="list-group-item">{{this}}</li>
                       {{/each}}
                  </ul>
                  <a
                    href="/spots/{{this._id}}/spot-details"
                    class="btn button-card"
                  >See more</a>
                </div>
              </div>
            </div>
          {{/each}}

        </div>
      </div>
    </section>
  </div>
