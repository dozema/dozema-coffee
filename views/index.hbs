<section>
  <h1>Our spots!</h1>

  {{#each spots}}
    <section>
      <img src="{{this.imageUrl}}" alt="{{this.title}}" />

      <h1>{{this.title}}</h1>
      <p>{{this.details}}</p>
      <p>{{this.rating}}</p>

    </section>

    <a href="/spots/{{this._id}}/spot-details">More details</a>
  {{/each}}

  <a href="/spots/create">Add a spot!</a>

</section>