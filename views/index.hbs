<div class="index-page"> 

<header class="header-content">
  <h1>Looking for a spot to work?</h1>
  <h2>find it here.....</h2>
</header>

<section class="spots-listing">
  <h2>Find your favorite spot</h2>

  {{#each spots}}
    <section>
      <img src="{{this.imageUrl}}" alt="{{this.title}}" />
      <h1>{{this.title}}</h1>
      <p>{{this.details}}</p>
    </section>

    <a href="/spots/{{this._id}}/spot-details">More details</a>
    <hr>
  {{/each}}

</section>

<section class="call-to-action"> 
  <h3>Do you know a nice spot for working?</h3>
  <button>
  <a href="/spots/create">Add a spot!</a>
  </button>
</section>
</div>