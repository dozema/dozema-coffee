<header class="header-content">
  <h1>Looking for a nice spot to work?</h1>
</header>

<div class="main-content">
  <div class="spots-listing">
    <section>
      <h3>Find your favorite spot</h3>
      <div class="container">
        <div class="row">

          {{#each spots}}
            <div class="col-3">
              <div class="card h-100" style="width: 15rem;">

                {{#if imageUrl}}
                  <img
                    src="{{imageUrl}}"
                    class="img-spot-card"
                    alt="{{this.title}}"
                  />
                {{else}}
                  <img
                    src="https://img.freepik.com/free-vector/cute-pug-dog-drink-coffee-cup-cartoon-animal-logo-coffee-illustration_295036-956.jpg"
                    alt="no image"
                    class="img-spot-card"
                  />
                {{/if}}

                <div class="card-body" >
                  <h5 class="card-title">{{this.title}}</h5>
                  <p class="card-text" style="height: 3rem;">{{this.description}}</p>
                  <a
                    href="/spots/{{this._id}}/spot-details"
                    class="btn button-card"
                  >See more</a>
                </div>
              </div>
            </div>
          {{/each}}

        </div>
      </div>
    </section>
  </div>
</div>
<section class="show-map">
<div id="map" class="map">Location</div>

</section>

  <section>
    <div class="call-to-action">
    <div>
    <h3>Do you know a nice spot for working? 👩🏼‍💻 ☕️ 👨🏾‍💻🥧 </h3>
    </div>

    <div>
      <a href="/spots/create"  class="call-to-action-button">Add a spot!</a>
    </div>
  </section>

  
</div>
