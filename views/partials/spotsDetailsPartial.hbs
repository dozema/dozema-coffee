<section>
  {{#if this.image_url}}
    <img src="{{this.image_url}}" alt="{{this.name}}" />
  {{/if}}

  <h1>{{this.title}}</h1>
  <p>{{this.details}}</p>
  <p>{{this.description}}</p>
  <p>{{this.creator}}</p>
  <p>{{this.rating}}</p>
  <p>{{this.address}}</p>
  <p>{{this.averagePrice}}</p>
  <p>{{this.openingHours}}</p>
  <br />
  <a href="/spots/{{this._id}}/edit">Edit</a>

</section>